<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/butComment"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <include
        android:id="@+id/homeItem"
        layout="@layout/home_item" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/homeItem">

        <RadioButton
            android:id="@+id/radioComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@mipmap/icon_comment"
            android:text="评论："
            android:checked="true"
            android:background="@drawable/selector_tab_bg"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"/>
        <RadioButton
            android:id="@+id/radioMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@mipmap/icon_member"
            android:text="参加成员："
            android:background="@drawable/selector_tab_bg"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/butComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="发表评论"
        android:background="@drawable/but_release"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/butActivity"
        android:visibility="visible"/>
    <Button
        android:id="@+id/butActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="参加活动"
        android:background="@drawable/but_release"
        app:layout_constraintStart_toEndOf="@id/butComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/editTextContext"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textVIewSend"
        android:background="@drawable/shape_edit_on"
        app:layout_constraintTop_toTopOf="@id/textVIewSend"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/textVIewSend"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/editTextContext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="发送"
        android:gravity="center"
        android:background="@drawable/foot_bg"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_margin="5dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
