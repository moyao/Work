<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/photo"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改头像"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintRight_toLeftOf="@id/imageViewNext"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/imageViewNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/next"
        android:layout_marginRight="10dp"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/imageViewPhoto"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textViewHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说点什么："
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/editTextAutograph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="愿你放下执着，放下不甘心，从 今以后，只负责精彩自己的人生。 往事不回头，未来不将就。"
        app:layout_constraintStart_toEndOf="@id/textViewHint"
        app:layout_constraintTop_toTopOf="@id/textViewHint"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:textSize="13dp"
        android:background="@color/transparent"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/editTextAutograph"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableRight="@mipmap/next"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="实名认证："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view1"/>
    <TextView
        android:id="@+id/textViewAuthentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未认证"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintBottom_toBottomOf="@id/textView1"
        android:layout_marginRight="30dp"
        />
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewAuthentication"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableRight="@mipmap/next"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="昵称："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view3"/>
    <EditText
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雯雯"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView2"
        app:layout_constraintBottom_toBottomOf="@id/textView2"
        android:layout_marginRight="30dp"
        android:background="@color/transparent"
        android:textSize="13dp"
        />
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="性别："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view4"/>

    <RadioGroup
        android:id="@+id/radioAge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView3"
        app:layout_constraintBottom_toBottomOf="@id/textView3"
        android:layout_marginRight="10dp">
        <RadioButton
            android:id="@+id/radioButMale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="男"/>
        <RadioButton
            android:id="@+id/radioButFemale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="女"/>
    </RadioGroup>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableRight="@mipmap/next"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="生日："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view5"/>
    <TextView
        android:id="@+id/textViewBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1998年1月1日"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintBottom_toBottomOf="@id/textView4"
        android:layout_marginRight="30dp"
        />
    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewBirthday"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableRight="@mipmap/next"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="教育："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view6"/>
    <TextView
        android:id="@+id/textViewEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本科"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView5"
        app:layout_constraintBottom_toBottomOf="@id/textView5"
        android:layout_marginRight="30dp"
        />
    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewEducation"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="职业："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view7"/>
    <EditText
        android:id="@+id/textViewOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="程序员"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView6"
        app:layout_constraintBottom_toBottomOf="@id/textView6"
        android:layout_marginRight="30dp"
        android:textSize="13dp"
        android:background="@color/transparent"
        />
    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewOccupation"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="是否单身："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view8"/>
    <RadioGroup
        android:id="@+id/radioSingle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView7"
        app:layout_constraintBottom_toBottomOf="@id/textView7"
        android:layout_marginRight="10dp">
        <RadioButton
            android:id="@+id/radioButYes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="是"/>
        <RadioButton
            android:id="@+id/radioButNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="否"/>
    </RadioGroup>

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textView7"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="兴趣爱好："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view9"/>
    <EditText
        android:id="@+id/textViewInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旅游，电影，美食"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView8"
        app:layout_constraintBottom_toBottomOf="@id/textView8"
        android:layout_marginRight="30dp"
        android:background="@color/transparent"
        android:textSize="13dp"

        />
    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewInterest"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="想去的地方："
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view10"/>
    <EditText
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安徽，重庆，成都"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView9"
        app:layout_constraintBottom_toBottomOf="@id/textView9"
        android:layout_marginRight="30dp"
        android:background="@color/transparent"
        android:textSize="13dp"
        />
    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/view_line"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/textViewAddress"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
