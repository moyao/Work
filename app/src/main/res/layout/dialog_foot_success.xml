<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_foot"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:padding="40dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="北京市，西城区"
        android:textColor="@color/color_656464"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/textViewContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="点击编辑足迹信息 "
        android:textColor="@color/color_2F2F2F"
        android:textSize="13dp"
        android:drawableLeft="@mipmap/add_foot"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/butCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/but_foot_yellow"
        android:padding="10dp"
        android:text="取消"
        android:textColor="#F09E00"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/butDetermine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewContext" />

    <Button
        android:id="@+id/butDetermine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@mipmap/but_foot_finish"
        android:text="留下足迹"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/butCancel"
        app:layout_constraintTop_toTopOf="@id/butCancel" />
</androidx.constraintlayout.widget.ConstraintLayout>