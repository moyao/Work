<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#FFE457"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/imageBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text="定位中"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"
        tools:ignore="MissingConstraints"
        android:visibility="visible"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/imageBlack"
        app:layout_constraintBottom_toBottomOf="@id/imageBlack"
        app:layout_constraintStart_toEndOf="@id/imageBlack"
        android:background="@mipmap/gps"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go 浪"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintEnd_toStartOf="@id/imagePreservation"
        app:layout_constraintStart_toEndOf="@id/imageBlack"
        app:layout_constraintTop_toTopOf="@id/view2"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/imagePreservation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:padding="15dp"
        android:src="@mipmap/cion_scan"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"
        tools:ignore="MissingConstraints"
        android:visibility="visible"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
